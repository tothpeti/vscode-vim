{
    "workbench.list.smoothScrolling": true,
    "workbench.colorTheme": "Visual Studio Dark",
    "editor.fontFamily": "Fira Code",
    "editor.formatOnSave": true,
    "editor.linkedEditing": true,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "editor.suggestOnTriggerCharacters": true,
    "explorer.compactFolders": false,
    "workbench.tree.indent": 20,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "editor.fontSize": 26,
    "editor.fontLigatures": true,
    "terminal.integrated.fontSize": 22,
    "editor.inlayHints.enabled": "on",
    "editor.inlayHints.fontFamily": "Fira Code",
    "editor.inlayHints.fontSize": 16,
    "zenMode.hideLineNumbers": false,
    "telemetry.telemetryLevel": "off",
    // ---- VIM mappings
    "vim.leader": "<Space>",
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.showmodename": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // Switch b/w buffers
        {
            "before": [
                "<S-Tab>"
            ],
            "commands": [
                ":bprevious"
            ]
        },
        {
            "before": [
                "<Tab>"
            ],
            "commands": [
                ":bnext"
            ]
        },
        // Create new vertical split window
        {
            "before": [
                "<leader>",
                "s",
                "v"
            ],
            "commands": [
                ":vsplit"
            ]
        },
        // Create new horizontal split window
        {
            "before": [
                "<leader>",
                "s",
                "h"
            ],
            "commands": [
                ":split"
            ]
        },
        // Close window/editor
        {
            "before": [
                "<leader>",
                "c",
                "w"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        // ---------- Panes -----------
        // Switch to the left pane
        {
            "before": [
                "<C-h>"
            ],
            "commands": [
                "workbench.action.focusLeftGroup"
            ]
        },
        // Switch to the below pane
        {
            "before": [
                "<C-j>"
            ],
            "commands": [
                "workbench.action.focusBelowGroup"
            ]
        },
        // Switch to the above pane
        {
            "before": [
                "<C-k>"
            ],
            "commands": [
                "workbench.action.focusAboveGroup"
            ]
        },
        // Switch to the right pane
        {
            "before": [
                "<C-l>"
            ],
            "after": [
                "workbench.action.focusRightGroup"
            ]
        },
        // ------- Nice to have -----------
        // Code action
        {
            "before": [
                "leader",
                "a"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "leader",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        // Quick search for file names
        {
            "before": [
                "leader",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "g",
                "h"
            ],
            "commands": [
                "editor.action.showDefinitionPreviewHover"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "leader",
                "c"
            ],
            "commands": [
                "editor.action.blockComment"
            ]
        }
    ],
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.direnv/**": true,
        "**/.venv/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/venv/**": true,
        "**/.git/**": true,
        "**/project": true,
        "**/target": true,
        "**/.bloop": true,
        "**/.metals": true
    },
    "gopls": {},
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.inlayHints.constantValues": true,
    "go.inlayHints.parameterNames": true,
    "metals.bloopJvmProperties": [
        "-Xms4G",
        "-Xmx8G"
    ],
    "metals.serverProperties": [],
    "metals.testUserInterface": "Test Explorer",
}
