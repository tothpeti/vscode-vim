{
    "workbench.colorTheme": "Catppuccin Macchiato",
    // ---- Catppuccin override
    "catppuccin.italicKeywords": false,
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 20,
    "editor.inlayHints.enabled": "on",
    "editor.inlayHints.fontFamily": "Berkeley Mono",
    "editor.inlayHints.fontSize": 19,
    "editor.fontFamily": "Berkeley Mono",
    "editor.fontSize": 23,
    "terminal.integrated.fontSize": 21,
    "terminal.integrated.fontFamily": "BerkeleyMono Nerd Font Mono",
    "editor.fontLigatures": false,
    "editor.formatOnSave": true,
    "editor.linkedEditing": true,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "editor.suggestOnTriggerCharacters": true,
    "editor.minimap.enabled": false,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "breadcrumbs.enabled": false,
    "zenMode.hideLineNumbers": false,
    "telemetry.telemetryLevel": "off",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "line",
    "workbench.colorCustomizations": {
        "editorCursor.background": "#000000",
    },
    "editor.bracketPairColorization.enabled": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // run vscodevim in a separate thread
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // ---- VIM mappings
    "vim.leader": "<Space>",
    "vim.incsearch": true,
    "vim.showmodename": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<Esc>"
            ],
            "when": [
                "editorFocus"
            ],
            "commands": [
                "nohl"
            ],
            "silent": true
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "g",
                "c"
            ],
            "commands": [
                "editor.action.blockComment"
            ]
        }
    ],
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.direnv/**": true,
        "**/.venv/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/venv/**": true,
        "**/.git/**": true,
        "**/project": true,
        "**/target": true,
        "**/.bloop": true,
        "**/.metals": true
    },
    "files.associations": {
        "*.toml": "toml"
    },
    "security.allowedUNCHosts": [
        "wsl$"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "http.proxyStrictSSL": false,
}
